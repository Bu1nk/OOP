<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.nsu.abramkin.controller.GameConfigController">

    <Label text="Настройки игры" style="-fx-font-size: 20px;" />

    <GridPane hgap="10" vgap="10">
        <Label text="Строки:" GridPane.rowIndex="0" GridPane.columnIndex="6"/>
        <TextField fx:id="rowsField" promptText="например 20" GridPane.rowIndex="0" GridPane.columnIndex="7"/>

        <Label text="Колонки:" GridPane.rowIndex="1" GridPane.columnIndex="6"/>
        <TextField fx:id="colsField" promptText="например 20" GridPane.rowIndex="1" GridPane.columnIndex="7"/>

        <Label text="Еды:" GridPane.rowIndex="2" GridPane.columnIndex="6"/>
        <TextField fx:id="foodField" promptText="например 3" GridPane.rowIndex="2" GridPane.columnIndex="7"/>

        <Label text="Длина победы:" GridPane.rowIndex="3" GridPane.columnIndex="6"/>
        <TextField fx:id="winLengthField" promptText="например 15" GridPane.rowIndex="3" GridPane.columnIndex="7"/>
    </GridPane>

    <Button text="Начать игру" onAction="#startGame"/>
</VBox>
